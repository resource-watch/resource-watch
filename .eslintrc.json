{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "globals": {
    "L": true,
    "config": true,
    "Transifex": true
  },
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "plugin:cypress/recommended"
  ],
  "overrides": [
    {
      "files": [
        "**/*.js",
        "**/*.js"
      ]
    }
  ],
  "rules": {
    "import/no-unresolved": "off",
    "react/jsx-filename-extension": "warn",
    "react/jsx-props-no-spreading": "off",
    "react-hooks/exhaustive-deps": "warn",
    "react-hooks/rules-of-hooks": "error"
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "@babel",
    "react-hooks",
    "cypress"
  ],
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}
