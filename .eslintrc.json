{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "globals": {
    "L": true,
    "config": true,
    "Transifex": true
  },
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "plugin:cypress/recommended"
  ],
  "overrides": [
    {
      "files": ["test/**/*"],
      "parser": "espree",
      "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
      },
      "plugins": [
        "mocha"
      ]
    },
    {
      "files": [
        "**/*.js",
        "**/*.jsx"
      ]
    }
  ],
  "rules": {
    "import/no-unresolved": "off",
    "react/jsx-filename-extension": "warn",
    "react/jsx-props-no-spreading": "off",
    "react-hooks/exhaustive-deps": "warn",
    "react-hooks/rules-of-hooks": "error",
    "jsx-a11y/anchor-is-valid": "off",
    "react/button-has-type": "off"
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "@babel",
    "react-hooks",
    "cypress",
    "mocha"
  ],
  "settings": {
    "import/resolver": {
      "node": {},  // need to add this
      "babel-module": {}
    }
  }
}
